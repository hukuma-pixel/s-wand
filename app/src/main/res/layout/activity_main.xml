<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S-Pen Паттерны"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Управление подключением -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/connectionStatusTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отключено ✗"
                android:textColor="#D32F2F"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подключить"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/disconnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отключить"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:enabled="false"/>
        </LinearLayout>

        <!-- Карточка статуса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Информация:"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Готов к подключению"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Индикатор записи -->
        <TextView
            android:id="@+id/recordingIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚫ Идет запись..."
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#FFEBEE"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <!-- Карточка результата -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Результат:"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Выбор режима -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Режим работы:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/recordingRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Запись паттерна"
                android:textColor="#000000"/>

            <RadioButton
                android:id="@+id/recognizingRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Распознавание паттерна"
                android:textColor="#000000"/>

            <RadioButton
                android:id="@+id/idleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ожидание"
                android:checked="true"
                android:textColor="#000000"/>
        </RadioGroup>

        <!-- Ввод имени паттерна -->
        <EditText
            android:id="@+id/patternNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя паттерна"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/saveNameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить имя"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- Сохраненные паттерны -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохраненные паттерны:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ListView
            android:id="@+id/patternsListView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#FAFAFA"
            android:layout_marginBottom="16dp"/>

        <!-- Инструкция -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Инструкция:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Нажмите 'Подключить'\n2. Выберите режим записи или распознавания\n3. Для записи введите имя паттерна\n4. Нажмите кнопку на S-Pen\n5. Двигайте S-Pen в воздухе\n6. Отпустите кнопку"
                android:textColor="#424242"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>